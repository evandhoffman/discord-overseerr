# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
# Comma-separated list of Discord user IDs allowed to use the bot (leave empty to allow everyone)
# Example: DISCORD_AUTHORIZED_USERS=123456789012345678,987654321098765432
DISCORD_AUTHORIZED_USERS=

# Overseerr Configuration
OVERSEERR_HOSTNAME=localhost
OVERSEERR_PORT=5055
OVERSEERR_API_KEY=your_overseerr_api_key_here
OVERSEERR_USE_SSL=false

# Notification Settings
# How often to check for status updates (in minutes)
NOTIFICATION_CHECK_INTERVAL=5

# Optional Configuration
LOG_LEVEL=INFO
TZ=UTC

# Volume mount paths (relative or absolute paths on host)
# Note: Chainguard images run as UID 65532 (nonroot user)
# Ensure directories are writable: sudo chown -R 65532:65532 ./config ./logs
CONFIG_PATH=./config
LOGS_PATH=./logs
